<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/index">

        <!-- üst kısım -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"/>
            <TextView
                android:id="@+id/textView"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/slogan"
                android:textSize="12sp"
                android:textColor="@color/title"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Pastanızın boyutunu seçiniz."
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <RadioGroup
            android:id="@+id/pastaboyut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <RadioButton
                android:id="@+id/kucuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Küçük"
                android:layout_marginRight="10dp"/>
            <RadioButton
                android:id="@+id/orta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orta"
                android:checked="true"
                android:layout_marginRight="10dp"/>
            <RadioButton
                android:id="@+id/buyuk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Büyük"/>

        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Pastanızın süslemelerini seçiniz."
            android:layout_marginTop="10dp"/>

        <CheckBox
            android:id="@+id/cb_sos"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Sos"
            android:layout_marginTop="10dp"/>
        <CheckBox
            android:id="@+id/cb_gboyalari"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Gıda Boyaları"
            android:layout_marginTop="10dp"/>
        <CheckBox
            android:id="@+id/cb_plastik_suslemeler"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Plastik Süslemeler"
            android:layout_marginTop="10dp"/>
        <CheckBox
            android:id="@+id/cb_shamurlari"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Şeker Hamurları"
            android:layout_marginTop="10dp"/>
        <CheckBox
            android:id="@+id/cb_yenilebilir_suslemeler"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Yenilebilir Süslemeler 5.50 TL"
            android:layout_marginTop="10dp"/>
        <CheckBox
            android:id="@+id/cb_sfigurler"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Pasta üstü şirin figürler"
            android:layout_marginTop="10dp"/>


        <Button
            android:id="@+id/btn_nextorder"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/pastasecimi"
            android:background="@color/btn"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>